{
  "name": "@unctad-ai/eregulations-mcp-server",
  "version": "0.1.4",
  "description": "Model Context Protocol (MCP) server for eRegulations API",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "eregulations-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*",
    "!dist/test/**"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "start": "node dist/index.js",
    "stdio": "tsc && node dist/index.js",
    "sse": "tsc && node dist/sse.js",
    "dev": "ts-node-esm src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "mcp-inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "test-client": "node dist/test-client.js",
    "prepublishOnly": "npm run build && npm run test",
    "version": "git add -A",
    "postversion": "git push && git push --tags",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major",
    "release": "npm version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unctad-ai/eregulations-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/unctad-ai/eregulations-mcp-server/issues"
  },
  "homepage": "https://github.com/unctad-ai/eregulations-mcp-server#readme",
  "keywords": [
    "eregulations",
    "mcp",
    "model-context-protocol",
    "llm",
    "api"
  ],
  "author": "benmoumen@gmail.com",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.0.1",
    "@types/better-sqlite3": "^7.6.12",
    "axios": "^1.6.2",
    "better-sqlite3": "^11.9.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^11.1.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.33",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.2",
    "typescript": "^5.3.2",
    "vitest": "^3.0.9"
  }
}
