{
  "name": "eregulations-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for eRegulations API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "stdio": "tsc && node dist/index.js",
    "sse": "tsc && node dist/sse.js",
    "dev": "ts-node-esm src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "mcp-inspector": "npx @modelcontextprotocol/inspector",
    "mcp-inspector-sse": "npx @modelcontextprotocol/inspector node dist/sse.js",
    "mcp-client": "node dist/test-client.js",
    "test-client": "node dist/test-client.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.0.1",
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  }
}
